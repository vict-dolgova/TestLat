<div class="content">
<header class="header">
  <div class="container-fluid">
    <h1><%= @subscriber.surname %> <%= @subscriber.name %> <%= @subscriber.middleName %></h1>
    <h2><%= @subscriber.ticketnumber %></h2>
    <h2>Телефон: <%= @subscriber.phone %>, адрес: <%= @subscriber.address %></h2>
  </div>
</header>

<div id="employees" class="section">
  <div class="container-fluid">
    <div>
      <h1>История выдачей</h1>
    </div>
  </div>
</div>

<div class="container-fluid">
<table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Книга</th>
        <th>Дата выдачи</th>
        <th>Дата возврата</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @subscriber.issuances.each do |issuance| %>
        <% if issuance.id %>
          <tr>
            <td><%= issuance.id %></td>
            <td><%= Book.find(issuance.book_id).cipher %> <%= Book.find(issuance.book_id).author %> <%= Book.find(issuance.book_id).name%></td>
            <td><%= issuance.issueDate %></td>
            <td><%= issuance.returnDate %></td>
            <td><%= link_to 'Редактировать', edit_issuance_path(issuance) %> </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <span class="link-back"><%= link_to 'К библиотеке', library_path(Library.find(@subscriber.library_id)) %></span>
  </div>
  <br>
  </div>

