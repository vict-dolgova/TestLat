<div class="content">
<header class="header">
  <div class="container-fluid text-center">
    <h1>Библиотеки</h1>
    <button type="button" class="btn btn-warning new"><%= link_to 'Добавить новую', new_library_path %></button>
  </div>
</header>
<div class="container-fluid">
<table  class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Номер</th>
      <th>Название</th>
      <th>Адресс</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.id %></td>
        <td><%= library.number %></td>
        <td><%= library.name %></td>
        <td><%= library.address %></td>
        <td><%= link_to 'Перейти', library %></td>
        <td><%= link_to 'Редактировать', edit_library_path(library) %></td>
        <td><%= link_to 'Удалить', library, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
